<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.junsan.JunsanFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start_junsan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="60dp" />

    <ImageView
        android:id="@+id/image_junsanbuilding"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/junsan"
        app:layout_constraintHorizontal_bias="0.434"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/text_junsan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginStart="40dp"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_junsanbuilding"
        app:layout_constraintVertical_bias="0.268"
        android:text="전산관" /> <!-- 임시 텍스트 추가 -->

    <ImageView
        android:id="@+id/image_carline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/todo"
        android:scaleType="fitXY"
        android:src="@drawable/carline"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_junsan"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/junsan1f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/junsan_1f"
        android:src="@drawable/junsan_1fimage"
        app:layout_constraintStart_toStartOf="@id/guideline_start_junsan"
        app:layout_constraintTop_toBottomOf="@id/image_carline" />

    <ImageButton
        android:id="@+id/junsan2f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/junsan_2f"
        android:src="@drawable/junsan_2fimage"
        app:layout_constraintStart_toStartOf="@id/guideline_start_junsan"
        app:layout_constraintTop_toBottomOf="@id/junsan1f" /> <!-- junsan1f 아래로 위치 변경 -->

    <ImageButton
        android:id="@+id/junsan3f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/junsan_3f"
        android:src="@drawable/junsan_3fimage"
        app:layout_constraintStart_toStartOf="@id/guideline_start_junsan"
        app:layout_constraintTop_toBottomOf="@id/junsan2f" /> <!-- junsan2f 아래로 위치 변경 -->

    <ImageButton
        android:id="@+id/junsan4f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/junsan_4f"
        android:src="@drawable/junsan_4fimage"
        app:layout_constraintStart_toStartOf="@id/guideline_start_junsan"
        app:layout_constraintTop_toBottomOf="@id/junsan3f" /> <!-- junsan3f 아래로 위치 변경 -->

    <ImageButton
        android:id="@+id/junsan5f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/junsan_5f"
        android:src="@drawable/junsan_5fimage"
        app:layout_constraintStart_toStartOf="@id/guideline_start_junsan"
        app:layout_constraintTop_toBottomOf="@id/junsan4f" /> <!-- junsan4f 아래로 위치 변경 -->

    <FrameLayout
        android:id="@+id/fragment_container_car"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
